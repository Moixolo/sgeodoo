<odoo>
  <data>
    <!-- explicit list view definition -->


    <record model="ir.ui.view" id="moixoloadventure.player_list">
      <field name="name">moixoloadventure list</field>
      <field name="model">moixoloadventure.player</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="dni"/>
          <field name="description"/>
          <field name="edad"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="moixoloadventure.city_list">
      <field name="name">moixoloadventure list</field>
      <field name="model">moixoloadventure.city</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="nivel"/>
          <field name="poweratac"/>
          <field name="powerresistance"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="moixoloadventure.squadron_list">
      <field name="name">moixoloadventure list</field>
      <field name="model">moixoloadventure.squadron</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="datacreation"/>
          <field name="numberbatlesassisted"/>
          <field name="cantfigters"/>
          <field name="powerresistance"/>
          <field name="poweratac"/>
          <field name="nivel"/>
        </tree>
      </field>
    </record>


